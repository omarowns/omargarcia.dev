<!DOCTYPE html>
<html>
  <head>
    <title>@omarowns::admin</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag "application", "data-turbo-track": "reload" %>
  </head>

  <body class="admin">
    <nav>
      <header class="bg-gray-50 mb-4">
        <p class="text-3xl text-gray-800 text-center shadow-glitch-bottom-right">@omarowns</p>
      </header>
      <ul>
        <li><%= link_to 'Profiles', profiles_path %></li>
        <li>
          <%= link_to 'Abouts', abouts_path %>
          <ul class="pl-4">
            <li><%= link_to 'About Lines', about_lines_path %></li>
          </ul>
        </li>
        <li>
          <%= link_to 'Work Groups', work_groups_path %>
          <ul class="pl-4">
            <li><%= link_to 'Works', works_path %></li>
          </ul>
        </li>
        <li>
          <%= link_to 'Interest Groups', interest_groups_path %>
          <ul class="pl-4">
            <li><%= link_to 'Interest', interests_path %></li>
          </ul>
        </li>
        <li>
          <%= link_to 'Location Groups', location_groups_path %>
        </li>
        <li>
          <%= link_to 'Locations', locations_path %>
          <ul class="pl-4">
            <li><%= link_to 'Location Proxies', location_proxies_path %></li>
          </ul>
        </li>
        <li>
          <%= link_to 'Images', images_path %>
          <ul class="pl-4">
            <li><%= link_to 'Image Proxies', image_proxies_path %></li>
          </ul>
        </li>

      </ul>
    </nav>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
