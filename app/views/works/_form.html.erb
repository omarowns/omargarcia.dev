<%= form_with(model: [work_group, work]) do |form| %>
  <% if work.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(work.errors.count, "error") %> prohibited this work from being saved:</h2>

      <ul>
        <% work.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :additional %>
    <%= form.text_field :additional %>
  </div>

  <div class="field">
    <%= form.label :link %>
    <%= form.text_field :link %>
  </div>

  <div class="field">
    <%= form.label :duration %>
    <%= form.text_field :duration %>
  </div>

  <div class="field">
    <%= form.label :image_pack_tag %>
    <%= form.text_field :image_pack_tag %>
  </div>

  <%= render Admin::BelongsToComponent.new(
        form: form,
        model: work,
        attribute: :work_group_id,
        select_model: WorkGroup,
        select_attrs: [:title, :id]
      )
  %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
