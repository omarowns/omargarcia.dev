<section class="bg-white h-screen flex flex-wrap">
  <div class="flex flex-col flex-grow h-full">
    <div class="mx-auto w-5/6 p-3 border-4 border-gray-900 shadow-glitch-bottom-right">
      <h1 class="text-center text-5xl lg:text-8xl"><%= @profile.name %></h1>
      <p class="text-center lg:text-xl"><i><%= @profile.title %></i></p>
      <p class="text-center lg:text-lg"><%= @profile.animoji %></p>
    </div>
    <div class="mx-auto h-full w-5/6 p-3 flex items-center overflow-hidden">
      <%= render ImageComponent.new(image: @profile.main_image, alt: 'Profile Picture', class: 'lg:h-full mx-auto self-center rounded-full lg:rounded-none') %>
    </div>
  </div>
  <div class="hidden flex flex-col mx-auto w-5/6 md:w-1/3">
    <div class="h-20 p-3 m-3 text-center align-middle border-4 border-green-400 rounded-lg">
      Spotify Widget
    </div>
  </div>
</section>
<section class="bg-white mt-3">
  <div class="w-5/6 p-3 mx-auto border-4 border-gray-900 shadow-glitch-bottom-left">
    <h2 class="text-center text-4xl lg:text-6xl"><%= @profile.about_title %></h2>
  </div>
  <div class="p-16 md:p-0 md:my-3 mx-auto max-w-prose md:overflow-hidden">
    <%= render ImageComponent.new(image: @profile.about.main_image, alt: 'About Me picture', class: 'self-center mx-auto rounded-none lg:rounded-full') %>
  </div>
  <div class="max-w-prose px-16 mx-auto text-lg lg:text-3xl">
    <% @profile.active_about_lines.each do |al| %>
      <p class="mt-2"><%= al.line %></p>
    <% end %>
  </div>
</section>
<section class="bg-white flex flex-col mt-3">
  <div class="w-5/6 p-3 mx-auto border-4 border-gray-900 shadow-glitch-top-left">
    <h2 class="text-center text-4xl lg:text-6xl"><%= @profile.work_group_title %></h2>
  </div>
  <div class="w-5/6 p-3 mx-auto flex flex-col flex-grow justify-evenly text-center">
    <% @profile.active_works.each do |work| %>
      <article class="h-1/5 md:h-full my-3 flex flex-col justify-center text-lg lg:text-3xl">
        <% if work.image_pack_tag.present? %>
          <%= image_pack_tag "media/images/#{work.image_pack_tag}", alt: work.title, class: 'h-20 md:h-40 mx-auto' %>
        <% else %>
          <%= render ImageComponent.new(image: work.main_image, alt: work.title, class: 'h-20 md:h-40 mx-auto') %>
        <% end %>
        <h3><%= link_to work.title, work.link, target: '_blank' %></h3>
        <p><%= work.duration %></p>
        <p><%= work.locations.pluck(:value) %></p>
      </article>
    <% end %>
  </div>
</section>
<section class="bg-white h-screen mt-3">
  <div class="w-5/6 p-3 mx-auto border-4 border-gray-900 shadow-glitch-top-right">
    <h2 class="text-center text-4xl lg:text-6xl">On a personal side</h2>
  </div>
  <div class="max-w-prose px-16 mx-auto text-lg lg:text-3xl">
    <p class="mt-4"><%= @profile.location_group_additional %></p>
    <p class="mt-4">
      <%= @profile.interest_group_title %>
      <ul>
        <% @profile.active_interests.each do |interest| %>
          <li class="my-3"><%= interest.value.html_safe %></li>
        <% end %>
      </ul>
    </p>
  </div>
</section>
