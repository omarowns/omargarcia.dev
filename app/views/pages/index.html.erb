<section class="bg-white h-screen flex flex-col">
  <div class="flex flex-col flex-grow h-full">
    <div class="mx-auto w-5/6 p-3 border-4 border-gray-900 shadow-glitch-bottom-left">
      <h1 class="text-center text-5xl lg:text-8xl"><%= @profile.name %></h1>
      <p class="text-center lg:text-xl"><i><%= @profile.title %></i></p>
      <p class="text-center lg:text-lg"><%= @profile.animoji %></p>
    </div>
    <div class="mx-auto h-full w-5/6 p-3 flex items-center overflow-hidden">
      <%= image_pack_tag 'media/images/omar_disney_squared.jpeg', size: '4:3', alt: 'profile picture', class: 'sm:h-full mx-auto self-center rounded-full' %>
    </div>
  </div>
  <div class="hidden flex flex-col mx-auto w-5/6 md:w-1/3">
    <div class="h-20 p-3 m-3 text-center align-middle border-4 border-green-400 rounded-lg">
      Spotify Widget
    </div>
  </div>
</section>
<section class="bg-white mt-3">
  <div class="w-5/6 p-3 mx-auto border-4 border-gray-900 shadow-glitch-bottom-right">
    <h2 class="text-center text-4xl lg:text-6xl"><%= @profile.about_title %></h2>
  </div>
  <div class="max-w-prose px-16 mx-auto text-lg lg:text-3xl">
    <% @profile.active_about_lines.each do |al| %>
      <p class="mt-2"><%= al.line %></p>
    <% end %>
  </div>
  <div class="max-w-prose p-12 mx-auto md:my-3 md:overflow-hidden sm:max-w-screen-sm md:max-w-screen-md lg:max-w-screen-lg xl:max-w-screen-xl 2xl:max-w-screen-2xl">
    <div class="flex flex-wrap justify-evenly">
      <%= image_pack_tag 'media/images/photos/IMG_2214.jpeg', alt: 'another profile picture', class: 'w-3/5 h-full' %>
      <%= image_pack_tag 'media/images/photos/IMG_4276.jpeg', alt: 'another profile picture', class: 'w-2/5 h-full self-center' %>
      <%= image_pack_tag 'media/images/photos/IMG_4248.jpeg', alt: 'another profile picture', class: 'w-2/5 h-full self-center' %>
      <%= image_pack_tag 'media/images/photos/IMG_7563.jpeg', alt: 'another profile picture', class: 'w-3/5 h-full self-end' %>
    </div>
  </div>
  <div class="max-w-prose px-16 mx-auto mb-3 text-lg lg:text-3xl">
    <p class="mt-2">
      <%= @profile.interest_group_title %>
      <ul>
        <% @profile.active_interests.each do |interest| %>
          <li class="my-3"><%= interest.value %></li>
        <% end %>
      </ul>
    </p>
  </div>
</section>
<section class="bg-white h-screen/2">
  <div class="w-5/6 p-3 mx-auto border-4 border-gray-900 shadow-glitch-top-right">
    <h2 class="text-center text-4xl"><%= @profile.work_group_title %></h2>
  </div>
  <div class="max-w-prose px-16 p-3 mx-auto text-lg md:text-3xl">
    <p class="mt-2"><%= @profile.work_group_additional %></p>
    <% @profile.active_works.each do |work| %>
      <% if work.image_pack_tag.present? %>
        <%= link_to work.link, target: '_blank' do %>
          <%= image_pack_tag "media/images/#{work.image_pack_tag}", alt: work.title, class: 'h-20 md:h-40 mx-auto md:p-8 lg:p-6' %>
        <% end %>
      <% else %>
      <% end %>
    <% end %>
  </div>
</section>
<section class="bg-white h-screen/2">
  <div class="w-5/6 p-3 mx-auto border-4 border-gray-900 shadow-glitch-top-left">
    <h2 class="text-center text-4xl"><%= @profile.location_group_title %></h2>
  </div>
  <div class="max-w-prose px-16 p-3 mx-auto text-lg md:text-3xl">
    <p class="mt-2">
      <%= @profile.location_group_additional %>
      <ul>
        <% @profile.active_locations.each do |location| %>
          <li class="my-3"><%= location.value %></li>
        <% end %>
      </ul>
    </p>
  </div>
</section>
