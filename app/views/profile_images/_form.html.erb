<%= form_with(model: [profile_image]) do |form| %>
  <% if profile_image.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(profile_image.errors.count, "error") %> prohibited this profile_image from being saved:</h2>

      <ul>
        <% profile_image.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :main %>
    <%= form.check_box :main %>
  </div>

  <div class="field">
    <%= form.label :featured %>
    <%= form.check_box :featured %>
  </div>

  <div class="field">
    <%= form.label :position %>
    <%= form.number_field :position %>
  </div>

  <%= render Admin::BelongsTo::ProfileComponent.new(form: form, model: profile_image) %>

  <%= render Admin::BelongsToComponent.new(
        form: form,
        model: profile_image,
        attribute: :image_id,
        select_model: Image,
        select_attrs: [:id],
        force: true
      )
  %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
