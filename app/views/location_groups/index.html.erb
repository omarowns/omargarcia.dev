<p id="notice"><%= notice %></p>

<h1>Location Groups</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Profile</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @location_groups.each do |location_group| %>
      <tr>
        <td><%= location_group.title %></td>
        <td><%= location_group.profile_id %></td>
        <td><%= link_to 'Show', location_group %></td>
        <td><%= link_to 'Edit', edit_location_group_path(location_group) %></td>
        <td><%= link_to 'Destroy', location_group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

