<p id="notice"><%= notice %></p>

<h1>Profiles</h1>

<table>
  <thead>
    <tr>
      <th>Type</th>
      <th>Name</th>
      <th>Title</th>
      <th>Animoji</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= profile.type %></td>
        <td><%= profile.name %></td>
        <td><%= profile.title %></td>
        <td><%= profile.animoji %></td>
        <td><%= link_to 'Show', [:admin, profile] %></td>
        <td><%= link_to 'Edit', edit_admin_profile_path(profile) %></td>
        <td><%= link_to 'Destroy', [:admin, profile], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

