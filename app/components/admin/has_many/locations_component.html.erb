<section class="locatable">
  <h2>Locations</h2>
  <table>
    <thead>
      <tr>
        <th>Position</th>
        <th>Location</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% location_proxies.each do |location_proxy| %>
        <tr>
          <td><%= location_proxy.position %></td>
          <td><%= location_proxy.location_value %></td>
          <td><%= link_to 'Show', location_proxy %></td>
          <td><%= link_to 'Edit', [:edit, location_proxy] %></td>
          <td><%= link_to 'Destroy', location_proxy, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
      <tr>
        <td colspan="5"><%= link_to 'New Location Proxy', [:new, @model, :location_proxy] %></td>
      </tr>
    </tbody>
  </table>

</section>
