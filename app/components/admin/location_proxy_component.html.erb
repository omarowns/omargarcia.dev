<section>
  <h2>Location Proxies</h2>
  <table>
    <thead>
      <tr>
        <th>Position</th>
        <th>Locatable</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @record.location_proxies.each do |record| %>
        <tr>
          <td><%= record.position %></td>
          <td><%= link_to record.polymorphic_title, record.locatable %></td>
          <td><%= link_to 'Show', record %></td>
          <td><%= link_to 'Edit', [:edit, record] %></td>
          <td><%= link_to 'Destroy', record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

</section>
