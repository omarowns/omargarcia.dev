<section>
  <h2><%= @model.to_s.humanize.pluralize %></h2>
  <table>
    <thead>
      <tr>
        <% attributes.each do |attribute| %>
          <th><%= attribute.capitalize %></th>
        <% end %>
        <% belongs_to_associations.each do |model_name| %>
          <th><%= model_name.to_s.capitalize %></th>
        <% end %>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @records.each do |record| %>
        <tr>
          <% attributes.each do |attribute| %>
            <td><%= record.public_send(attribute) %></td>
          <% end %>
          <% belongs_to_associations.each do |belongs_to| %>
            <td><%= link_to record.public_send(belongs_to), record.public_send(belongs_to) %></td>
          <% end %>
          <td><%= link_to 'Show', record %></td>
          <td><%= link_to 'Edit', [:edit, record] %></td>
          <td><%= link_to 'Destroy', record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
      <tr>
        <td colspan="<%= attributes.length + belongs_to_columns.length + 3 %>"><%= new_link %></td>
      </tr>
    </tbody>
  </table>

</section>
