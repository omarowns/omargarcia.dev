<table>
  <thead>
    <tr>
      <% @attributes.each do |attribute| %>
        <th><%= attribute.capitalize %></th>
      <% end %>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @records.each do |record| %>
      <tr>
        <% @attributes.each do |attribute| %>
          <td><%= record.public_send(attribute) %></td>
        <% end %>
        <td><%= link_to 'Show', record %></td>
        <td><%= link_to 'Edit', [:edit, record] %></td>
        <td><%= link_to 'Destroy', record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    <tr>
      <td colspan="<%= @attributes.length + 3 %>"><%= new_link %></td>
    </tr>
  </tbody>
</table>
