<p><%= provider_name %> Settings</p>
<div class="flex flex-col w-1/3">
  <% if user_has_provider_setup? %>
    <%= link_to "Remove #{provider_name} Oauth Authorization", user_provider, method: :delete, data: { confirm: 'Are you sure?' } %>
    <%= link_to "#{provider_name} Oauth Settings", provider_oauth_settings_url, target: '_blank' %>
  <% else %>
    <% if spotify_provider? %>
      <%= button_to "Connect with #{OmniAuth::Utils.camelize(@provider)}", omniauth_authorization_path, params: { show_dialog: true }, data: { turbo: false } %>
    <% else %>
      <%= button_to "Connect with #{OmniAuth::Utils.camelize(@provider)}", omniauth_authorization_path, data: { turbo: false } %>
    <% end %>
  <% end %>
</div>
